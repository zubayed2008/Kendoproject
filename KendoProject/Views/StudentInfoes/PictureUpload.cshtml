@model StudentBasic.ModelView.StudentInfoModelView

@{
    ViewBag.Title = "PictureUpload";
}

<h2>Picture Upload</h2>
<form method="post" action='@Url.Action("Submit")'>
    <div class="form-group">
        <div class="form-inline">
            <label for="name" class="col-sm-2 control-label">Name: </label>
            <input type="text" class="form-control" id="name" placeholder="Enter Name" />
        </div>
    </div>
    <div class="form-group">
        <div class="form-inline">
            <label for="Year" class="col-sm-2 control-label">Year:</label>
            <input type="text" class="form-control" id="Year" placeholder="Enter Year" />
        </div>
    </div>
    <div class="form-group">
        <div class="form-inline">
            <label for="Department" class="col-sm-2 control-label">Department: </label>
            @(Html.Kendo().DropDownListFor(model => model.DepartmentID)
                                    .OptionLabel("Select A Department")
                                    .DataTextField("dptName")
                                    .DataValueField("DepartmentID")
                                    .AutoBind(false)
                                    .HtmlAttributes(new { style = "width: 200px;" })
                                    .DataSource(ds =>
                                    {
                                        ds.Read("DepartmentList", "StudentInfoes");
                                    })
            )
        </div>
    </div>
    <div class="form-group">
        <div class="form-inline">
            <label for="files" class="col-sm-2 control-label">Image Upload: </label>
            <input name="files" id="files" type="file" />
        </div>
    </div>
    <div class="form-group">
        <p style="padding-top: 1em; text-align: right;margin-right:750px">
            <input type="submit" class="btn btn-info" value="Save" /> <input type="button" class="btn btn-info" value="Refresh" /> <input class="btn btn-info" type="button" value="Cancel" />
        </p>
    </div>
    </form>
    <script>
        $(document).ready(function () {
            $("#files").kendoUpload();
        });
    </script>
