@model IEnumerable<StudentBasic.ModelView.StudentInfoModelView>
@{
    ViewBag.Title = "DynamicFieldShow";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    
      <h1>View of Department</h1>
        <div class="row">
            <div class="col-md-2">
                <h3><span class="label label-primary">Department Name</span></h3>
            </div>
            <div class="col-md-2">
                <h3><span class="label label-primary">Department Code</span></h3>
            </div>
            <div class="col-md-2">
                <span><input type="button" class="btn btn-block btn-success" id="Edit" value="Edit" /></span>
            </div>
        </div>
<div id="Partial1">
    @{
    if (Model != null)
        { 
            foreach (var item in Model)
            {

                <div class="row">
                    <div class="col-md-2">
                        <div class="k-edit-label"> @item.dptName </div>
                    </div>
                    <div class="col-md-2">
                        <div class="k-edit-label"> @item.departmentCode</div>
                </div>
                <div class="col-md-2">

                </div>
            </div>

            }
        }
      }
    
</div>
<div id="Partial2">
    <div id="load" class="loading_partial" hidden></div>
</div>
}



<script>
    $("#Edit").click(function () {
        
        $("#Partial1").hide();
        $("#load").show();
        $("#Partial2").load('@Url.Action("DynamicFieldEdit", "StudentInfoes")');
        $("#load").hide();

    });
    
